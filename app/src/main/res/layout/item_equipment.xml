<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_equipment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Icon and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_equipment_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_sports"
                app:tint="@color/primary"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_equipment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basketball"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/tv_equipment_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balls"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVAILABLE"
                app:chipBackgroundColor="@color/status_available"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_equipment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Official size basketball"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"/>

        <!-- Quantity -->
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5/10 available"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Borrowed Info -->
        <TextView
            android:id="@+id/tv_borrowed_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borrowed by: John Doe"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due: Oct 28, 05:00 PM"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Borrow Button (for students) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_borrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Borrow"
                app:icon="@drawable/ic_add"
                app:cornerRadius="8dp"
                android:visibility="gone"/>

            <!-- Return Button (for students) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Return"
                app:icon="@drawable/ic_check"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:visibility="gone"/>

            <!-- Edit Button (for coaches/admins) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"
                app:icon="@drawable/ic_edit"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <!-- Delete Button (for coaches/admins) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                app:icon="@drawable/ic_delete"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/error"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
