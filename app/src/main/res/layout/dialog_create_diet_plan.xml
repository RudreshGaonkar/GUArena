<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Diet Plan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:layout_marginBottom="20dp" />

    <!-- Plan Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_plan_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Diet Plan Name"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@drawable/ic_restaurant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_plan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Daily Calories -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_daily_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Daily Calorie Target"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@drawable/ic_local_fire_department">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_daily_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Meal Planning -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meals"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/on_surface"
        android:layout_marginBottom="12dp" />

    <!-- Breakfast -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Breakfast"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@drawable/ic_wb_sunny">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Lunch -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Lunch"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@drawable/ic_wb_sunny">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Dinner -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Dinner"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@drawable/ic_nights_stay">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Snacks -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_snacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Snacks (Optional)"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:startIconDrawable="@drawable/ic_cookie">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_snacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_diet_plan"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_diet_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Plan"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/primary" />

    </LinearLayout>

</LinearLayout>
