<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">


        <!-- âœ… Force dark text in all text input fields -->
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="colorOnSurface">@color/on_surface</item>
    </style>

    <style name="DashboardCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/dashboard_card_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Dashboard Icon Style -->
    <style name="DashboardIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Dashboard Text Style -->
    <style name="DashboardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- Text Styles -->
    <style name="TextAppearance.Guarena.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Guarena.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.Guarena.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Button.Guarena.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Card Styles -->
    <style name="Card.Guarena" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="TextInputLayout.Guarena" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Toolbar.Guarena" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
        <item name="subtitleTextColor">@color/on_primary</item>
    </style>

    <!-- FAB Styles -->
    <style name="FAB.Guarena" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/on_secondary</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

</resources>
